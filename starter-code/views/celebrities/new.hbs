<h2>Create a new celebrity</h2>
<form method="POST" action="/celebrities/new">
  <div class="form-group">
    <label for="todoName">Name</label>
    <input name="name" type="text" class="form-control" id="todoName" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="todoDesc">Occupation</label>
    <input name="occupation" type="text" class="form-control" id="todoDesc">
  </div>
  <div class="form-group">
    <label for="todoDesc">Catch Phrase</label>
    <input name="catchPhrase" type="text" class="form-control" id="todoDesc">
  </div>


  <button type="submit" class="btn btn-primary">Submit</button>
</form>
